<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="CommonFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">serif</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="CommonFont.Yellow">
        <item name="android:textColor">#FEFE00</item>
    </style>
    <style name="CommonFont.Cyan">
        <item name="android:textColor">#00FEFE</item>
    </style>
    <style name="CommonFont.Footer">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CommonFont.Big">
        <item name="android:textSize">50sp</item>
    </style>

    <style name="CommonFont.Medium">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CommonFont.Small">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="CommonFont.Tiny">
        <item name="android:textSize">10sp</item>
    </style>


</resources>
