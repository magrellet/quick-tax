<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calc_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sovos.quicktax.CalcResultActivity"
    >
    <RelativeLayout
        android:id="@+id/layout_header"
       android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        <ImageView
            android:id="@+id/image_quicktax_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/quicktax_590"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_header"
        android:layout_marginTop="30dp">

        <TableLayout
            android:id="@+id/table_calc_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:stretchColumns="*">
            <TableRow>
                <TextView
                    android:id="@+id/text_taxing_authority"
                    style="@style/CommonFont"
                    android:background="#8c8c8c"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:text="Taxing Authority"
                    android:textSize="14sp"/>
                <TextView
                android:id="@+id/text_tax_amount"
                style="@style/CommonFont"
                android:background="#8c8c8c"
                android:padding="3dip"
                android:text="Tax"
                android:textSize="14sp"
                android:gravity="center"
                />
            </TableRow>
        </TableLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_table"
        android:layout_marginTop="30dp">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/table_detail"
            android:layout_alignParentRight="true">
            <TableRow>
                <TextView
                    android:id="@+id/text_gross_amount_title"
                    style="@style/CommonFont.Medium"
                    android:layout_width="wrap_content"
                    android:gravity="right"
                    android:padding="3dip"
                    android:text="Gross amount $"
                    />
                <TextView
                    android:id="@+id/text_gross_amount"
                    style="@style/CommonFont.Medium"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:hint="0.0"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/text_taxes_amount_title"
                    style="@style/CommonFont.Medium"
                    android:layout_width="wrap_content"
                    android:gravity="right"
                    android:padding="3dip"
                    android:text="Taxes $"
                    />
                <TextView
                    android:id="@+id/text_taxes_amount"
                    style="@style/CommonFont.Medium"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:hint="0.0"/>
            </TableRow>
        </TableLayout>
        <TextView
            android:id="@+id/text_rights"
            style="@style/CommonFont.Yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/table_detail"
            android:gravity="left"
            android:text="TOTAL"
            />
        <TextView
            android:id="@+id/text_dollar_sign"
            style="@style/CommonFont.Big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_rights"
            android:text="$"/>
        <TextView
            android:id="@+id/text_total_amount"
            style="@style/CommonFont.Big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/text_dollar_sign"
            android:layout_toRightOf="@id/text_dollar_sign"
            android:layout_marginLeft="30dp"
            android:hint="0.0"/>
    </RelativeLayout>

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/layout_footer"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
